        <a role="button" href="/Account/Login" class="btn btn-danger">LogIn</a>
        <a role="button" href="/Itinary/NewTraject" class="btn btn-info">NewTrajet</a>
        @*<form class="form-inline my-2 my-lg-0">
                <input class="form-control mr-sm-2" type="text" placeholder="Search">
                <button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
            </form>*@
        <hr />
    </nav>
</header>


<main class="container body-content">
    @RenderBody()

</main>
<footer class="fixed-bottom container">
    <hr />
    <p>&copy; @DateTime.Now.Year - BeeEco Une application ASP.NET</p>
</footer>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")

</body>
</html>